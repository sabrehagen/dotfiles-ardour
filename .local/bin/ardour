MIDI_TO_XDOTOOL=$HOME/.config/ardour8/scripts/midi_to_xdotool.py

# Kill any existing midi to xdotool instance
pkill -f python3\.*$MIDI_TO_XDOTOOL

# Start midi to xdotool in background
python3 $MIDI_TO_XDOTOOL &
MIDI_TO_XDOTOOL_PID=$!

# Start ardour
/usr/bin/ardour "$@"

# When ardour exits, kill midi to xdotool
kill $MIDI_TO_XDOTOOL_PID 2>/dev/null
